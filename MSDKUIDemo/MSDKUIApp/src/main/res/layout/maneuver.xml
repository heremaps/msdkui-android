<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/route_item_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:gravity="center_vertical" />

    <com.here.msdkui.routing.RouteDescriptionItem
        android:id="@+id/route_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start"
        android:background="@android:color/white"
        android:elevation="2dp"
        tools:targetApi="lollipop" />

    <com.here.msdkui.routing.ManeuverDescriptionList
        android:id="@+id/maneuver_route_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/route_item"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="false" />

</RelativeLayout>