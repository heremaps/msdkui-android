<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MSDKUIDarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/lui_brand_dark</item>
        <item name="android:textColorPrimary">?attr/colorForeground</item>

        <item name="colorPrimary">@color/lui_brand</item>
        <item name="colorPrimaryDark">@color/lui_brand_dark</item>

        <item name="colorBackgroundBrand">@color/lui_brand</item>

        <item name="colorBackgroundDark">@color/lui_dark1</item>
        <item name="colorBackgroundViewDark">@color/lui_dark2</item>

        <item name="colorBackgroundLight">@color/lui_light</item>
        <item name="colorBackgroundViewLight">@color/lui_white</item>

        <item name="colorAccentLight">@color/lui_accent_light</item>
        <item name="colorAccent">@color/lui_accent</item>

        <item name="colorAccentSecondaryLight">@color/lui_accent_secondary_light</item>
        <item name="colorAccentSecondary">@color/lui_accent_secondary</item>

        <item name="colorForegroundLight">@color/lui_white</item>
        <item name="colorForeground">@color/lui_black90</item>

        <item name="colorForegroundSecondaryLight">@color/lui_white70</item>
        <item name="colorForegroundSecondary">@color/lui_black60</item>

        <item name="colorHintLight">@color/lui_white40</item>
        <item name="colorHint">@color/lui_black30</item>

        <item name="colorPositive">@color/lui_positive</item>
        <item name="colorPositiveLight">@color/lui_positive15</item>
        <item name="colorAlert">@color/lui_alert</item>
        <item name="colorAlertLight">@color/lui_alert15</item>
        <item name="colorNegative">@color/lui_negative</item>
        <item name="colorNegativeLight">@color/lui_negative15</item>
        <item name="colorSignificant">@color/lui_significant</item>
        <item name="colorSignificantLight">@color/lui_significant15</item>

        <!-- Additional color styles in case you need them, you might also add new ones. -->
        <item name="colorDividerLight">@color/lui_white15</item>
        <item name="colorDivider">@color/lui_black15</item>

        <item name="colorDisabledLight">@color/lui_white15</item>
        <item name="colorDisabled">@color/lui_black15</item>

        <item name="colorBackgroundPressedLight">@color/lui_white05</item>
        <item name="colorBackgroundPressed">@color/lui_black05</item>

        <item name="colorBackgroundMapLight">@color/lui_white80</item>
        <item name="colorBackgroundMap">@color/lui_black90</item>

        <item name="colorOpacityMaskLight">@color/lui_black90</item>
        <item name="colorOpacityMask">@color/lui_black85</item>

        <item name="colorLocation">@color/lui_accent</item>

        <item name="colorRoute">@color/lui_brand</item>

        <item name="routeDescriptionItem">@style/RouteDescriptionItem</item>
        <item name="routeDescriptionItemIcon">@style/RouteDescriptionItemIcon</item>
        <item name="routeDescriptionTotalTime">@style/RouteDescriptionTotalTime</item>
        <item name="routeDescriptionTrafficWarning">@style/RouteDescriptionTrafficWarning</item>
        <item name="routeDescriptionSectionBar">@style/RouteDescriptionSectionBar</item>
        <item name="routeDescriptionDescDetails">@style/RouteDescriptionDescDetails</item>
        <item name="routeDescriptionDescArrival">@style/RouteDescriptionDescArrival</item>

        <item name="guidanceManeuverPanel">@style/GuidanceManeuverPanel</item>
        <item name="guidanceManeuverPanelHeadingText">@style/GuidanceManeuverPanelHeadingText</item>
        <item name="guidanceManeuverPanelSecondaryText">@style/GuidanceManeuverPanelSecondaryText</item>
        <item name="guidanceManeuverPanelDestinationText">@style/GuidanceManeuverPanelDestinationText</item>
        <item name="guidanceManeuverPanelLeftIcon">@style/GuidanceManeuverPanelLeftIcon</item>
        <item name="guidanceManeuverPanelRightIcon">@style/GuidanceManeuverPanelRightIcon</item>
        <item name="guidanceManeuverPanelHeadingTextLand">@style/GuidanceManeuverPanelHeadingTextLand</item>
        <item name="guidanceManeuverPanelSecondaryTextLand">@style/GuidanceManeuverPanelSecondaryTextLand</item>
    </style>

    <style name="Image">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minWidth">@dimen/min_value</item>
        <item name="android:minHeight">@dimen/min_value</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorForeground</item>
    </style>

    <style name="TextStyle.Large">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="TextStyle.Medium">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColor">?attr/colorForegroundSecondary</item>
    </style>

    <style name="TextStyle.Medium.Light">
        <item name="android:textSize">@dimen/textSizeMedium</item>
        <item name="android:textColor">?attr/colorForegroundSecondaryLight</item>
    </style>

    <style name="TextStyle.Tinny">
        <item name="android:textSize">@dimen/textSizeTiny</item>
        <item name="android:textColor">?attr/colorForegroundSecondary</item>
    </style>

    <style name="TextStyle.Large.Bold" parent="TextStyle.Large">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextStyle.Medium.Bold">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextStyle.Tinny.Bold" parent="TextStyle.Tinny">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/contentMarginMedium</item>
        <item name="android:layout_marginRight">@dimen/contentMarginMedium</item>
        <item name="android:layout_marginStart" tools:targetApi="17">@dimen/contentMarginMedium
        </item>
        <item name="android:layout_marginEnd" tools:targetApi="17">@dimen/contentMarginMedium</item>
        <item name="android:textColor">?attr/colorAccentLight</item>
        <item name="android:background">@android:color/transparent</item>

    </style>

    <style name="Headline2" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:textSize">@dimen/textSizeExtraHuge</item>
    </style>

    <!-- Route description item -->
    <style name="RouteDescriptionItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorBackgroundViewLight</item>
        <item name="android:paddingLeft">@dimen/contentMarginHuge</item>
        <item name="android:paddingRight">@dimen/contentMarginHuge</item>
        <item name="android:paddingTop">@dimen/contentMarginExtraLarge</item>
        <item name="android:paddingBottom">@dimen/contentMarginExtraLarge</item>
    </style>

    <style name="RouteDescriptionItemIcon" parent="Image">
        <item name="android:layout_marginTop">@dimen/contentMarginExtraLarge</item>
        <item name="android:tint">?attr/colorForeground</item>
    </style>

    <style name="RouteDescriptionTotalTime" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorForeground</item>
    </style>

    <style name="RouteDescriptionTrafficWarning" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/contentMarginSmall</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/contentMarginSmall</item>
    </style>

    <style name="RouteDescriptionSectionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginTop">@dimen/contentMarginMedium</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:background">?attr/colorHint</item>
        <item name="android:layout_marginRight">@dimen/contentMarginLarge</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">@dimen/contentMarginLarge</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="RouteDescriptionDescDetails" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?attr/colorForegroundSecondary</item>
    </style>

    <style name="RouteDescriptionDescArrival" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorForegroundSecondary</item>
    </style>

    <!-- GuidanceManeuverPanel -->

    <style name="GuidanceManeuverPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorBackgroundDark</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="GuidanceManeuverPanelLeftIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">28dp</item>
        <item name="android:tint">?attr/colorForegroundLight</item>
    </style>

    <style name="GuidanceManeuverPanelRightIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>


    <style name="GuidanceManeuverPanelHeadingText" parent="Headline2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">16dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:textColor">?attr/colorForegroundLight</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="GuidanceManeuverPanelHeadingTextLand" parent="GuidanceManeuverPanelHeadingText">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">0dp</item>     <!-- we have padding in parent theme -->
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">28dp</item>
    </style>

    <style name="GuidanceManeuverPanelSecondaryText" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">16dp</item>
        <item name="android:textColor">?attr/colorForegroundLight</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="GuidanceManeuverPanelSecondaryTextLand" parent="GuidanceManeuverPanelSecondaryText">
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">28dp</item>
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="GuidanceManeuverPanelDestinationText" parent="GuidanceManeuverPanelSecondaryText">
        <item name="android:textColor">?attr/colorAccentLight</item>
    </style>

    <style name="GuidanceCurrentStreet">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginLeft">@dimen/contentMarginHuge</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">@dimen/contentMarginHuge</item>
        <item name="android:layout_marginRight">@dimen/contentMarginHuge</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">@dimen/contentMarginHuge</item>
        <item name="android:layout_marginTop">@dimen/contentMarginMedium</item>
        <item name="android:layout_marginBottom">@dimen/contentMarginLarge</item>
        <item name="android:paddingLeft">@dimen/contentMarginHuge</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">@dimen/contentMarginHuge</item>
        <item name="android:paddingRight">@dimen/contentMarginHuge</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">@dimen/contentMarginHuge</item>
    </style>

    <style name="GuidanceCurrentStreetText" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">?attr/colorForegroundLight</item>
    </style>

</resources>

