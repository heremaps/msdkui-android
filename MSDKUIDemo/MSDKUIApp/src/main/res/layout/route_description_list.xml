<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/route_description_list_heading"
        style="@style/TextStyle.Medium.Bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:text="@string/msdkui_app_route_results_title" />

    <com.here.msdkui.routing.RouteDescriptionList
        android:id="@+id/route_description_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/route_description_list_heading" />

</RelativeLayout>