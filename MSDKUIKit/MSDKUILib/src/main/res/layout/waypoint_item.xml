<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/waypoint_item_parent"
    style="?attr/waypointItem">

    <ImageView
        android:id="@+id/remove_icon"
        style="?attr/waypointItemRemoveIcon"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/waypoint_label"
        style="?attr/waypointItemLabel"
        android:layout_toEndOf="@+id/remove_icon"
        android:layout_toStartOf="@+id/drag_icon" />

    <com.here.msdkui.routing.DraggableImageView
        android:id="@+id/drag_icon"
        style="?attr/waypointItemDragIcon" />
</RelativeLayout>