<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ws_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorBackgroundViewDark">

    <ImageView
        android:id="@+id/ws_placeholder"
        style="@style/Image"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:scaleType="centerInside"
        android:tint="?attr/colorForegroundLight"
        app:srcCompat="@drawable/ic_place_marker" />

    <ProgressBar
        android:id="@+id/ws_placeholder_loading"
        style="@style/ProgressBar"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:theme="@style/AppTheme.WhiteAccent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/waypoint_label"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/contentMarginMedium"
        android:layout_marginEnd="@dimen/contentMarginExtraLarge"
        android:layout_marginLeft="@dimen/contentMarginExtraLarge"
        android:layout_marginRight="@dimen/contentMarginExtraLarge"
        android:layout_marginStart="@dimen/contentMarginExtraLarge"
        android:layout_marginTop="@dimen/contentMarginMedium"
        android:layout_toEndOf="@id/ws_placeholder"
        android:clickable="false"
        android:ellipsize="end"
        android:textColor="?attr/colorBackgroundViewLight"
        android:visibility="gone" />

</RelativeLayout>



