<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/waypoint_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorBackgroundBrand">

    <ImageView
        android:id="@+id/remove_icon"
        style="@style/Image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/msdkui_remove_waypoint"
        android:padding="@dimen/contentMarginSmall"
        android:tint="?attr/colorForegroundSecondaryLight"
        app:srcCompat="@drawable/ic_remove_listitem" />

    <TextView
        android:id="@+id/waypoint_label"
        style="@style/TextStyle.Medium.Light"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/remove_icon"
        android:layout_toLeftOf="@+id/drag_icon"
        android:layout_toRightOf="@+id/remove_icon"
        android:layout_toStartOf="@+id/drag_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:minHeight="@dimen/min_value"
        android:minWidth="@dimen/min_value"
        android:paddingTop="@dimen/contentMarginLarge"
        android:paddingBottom="@dimen/contentMarginLarge"
        android:paddingLeft="@dimen/contentMarginZero"
        android:paddingRight="@dimen/contentMarginZero"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:textColor="?attr/colorForegroundSecondaryLight" />

    <com.here.msdkui.routing.DraggableImageView
        android:id="@+id/drag_icon"
        style="@style/Image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/msdkui_drag_waypoint"
        android:focusable="true"
        android:tint="?attr/colorForegroundSecondaryLight"
        app:srcCompat="@drawable/ic_drag_listitem" />
</RelativeLayout>