<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_horizontal">

    <ImageView
        android:id="@+id/ac_back_button"
        style="@style/Image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/msdkui_app_back"
        android:scaleType="centerInside"
        android:tint="?attr/colorAccent"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:id="@+id/ac_title"
        style="@style/MSDKUIAppTitleTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/contentMarginExtraLarge"
        android:layout_marginStart="@dimen/contentMarginExtraLarge"
        android:layout_toEndOf="@id/ac_back_button"
        android:layout_toRightOf="@id/ac_back_button"
        android:clickable="false" />

    <ImageView
        android:id="@+id/ac_right_icon"
        style="@style/Image"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/msdkui_app_info"
        android:padding="@dimen/contentMarginMedium"
        android:scaleType="centerInside"
        android:tint="?attr/colorAccent"
        app:srcCompat="@drawable/ic_info_outline_black_24dp" />


</RelativeLayout>