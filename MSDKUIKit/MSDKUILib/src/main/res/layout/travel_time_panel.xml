<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/travelTimePanel"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/travel_icon"
        style="?attr/travelTimePanelIcon"
        tools:targetApi="lollipop" />

    <TextView
        android:id="@+id/travel_time_text"
        style="?attr/travelTimePanelTimeText"
        android:layout_toRightOf="@id/travel_icon"
        android:layout_toEndOf="@id/travel_icon" />

    <TextView
        android:id="@+id/travel_time_details"
        style="?attr/travelTimePanelTimeDetailsText"
        android:layout_toEndOf="@id/travel_time_text"
        android:layout_toRightOf="@id/travel_time_text" />

</RelativeLayout>