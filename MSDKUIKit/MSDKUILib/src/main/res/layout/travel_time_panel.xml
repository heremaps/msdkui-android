<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/colorBackgroundLight"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    tools:ignore="Overdraw">

    <ImageView
        android:id="@+id/travel_icon"
        style="@style/Image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:tint="?attr/colorForeground"
        android:tintMode="src_in"
        app:srcCompat="@drawable/ic_settings_time_24"
        tools:targetApi="lollipop" />

    <TextView
        android:id="@+id/travel_time_text"
        style="@style/TextStyle.Medium.Bold"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/travel_icon"
        android:layout_toRightOf="@id/travel_icon"
        android:textColor="?attr/colorForegroundSecondary" />

    <TextView
        android:id="@+id/travel_time_details"
        style="@style/TextStyle.Medium.Bold"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/contentMarginSmall"
        android:layout_marginLeft="@dimen/contentMarginMedium"
        android:layout_marginRight="@dimen/contentMarginSmall"
        android:layout_marginStart="@dimen/contentMarginMedium"
        android:layout_toEndOf="@id/travel_time_text"
        android:layout_toRightOf="@id/travel_time_text"
        android:textColor="?attr/colorForegroundSecondary" />

</RelativeLayout>